.weekly_container{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  height: 100%;
  padding: 40rpx;
}

.movie{
  display: flex;
  padding: 40rpx 0;
  height: 1000rpx;
  width: 100%;
}

.movie-item{
  position: relative;
  display: flex;
  background: #eee;
  border-radius: 10rpx;
  padding: 30rpx 0;
}

.movie-details{
  flex: 1;
  font-size: 32rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  padding-top: 40rpx;
}

.movie_container{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.movie-imge{
  flex: 1;
  display: block;
  width: 300rpx;
  height: 400rpx;
}

.return-btn{
  position: absolute;
  color: #388;
  bottom: 60rpx;
  right: 10rpx;
}